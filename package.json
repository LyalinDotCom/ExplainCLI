{
  "name": "explain-cli",
  "version": "0.1.0",
  "description": "A read-only, project-aware code educator TUI that builds mental models and teaches architecture",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "dist/index.js",
  "bin": {
    "explain": "./dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx src/index.tsx",
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cli",
    "terminal",
    "tui",
    "code-education",
    "architecture",
    "gemini",
    "ai",
    "interactive",
    "read-only"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "globby": "^14.0.0",
    "ignore": "^5.3.0",
    "ink": "^5.0.1",
    "ink-gradient": "^3.0.0",
    "ink-progress-bar": "^3.0.0",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "micromatch": "^4.0.5",
    "parse-gitignore": "^2.0.0",
    "react": "^18.3.1",
    "strip-ansi": "^7.1.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.3",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.0",
    "typescript": "^5.5.4"
  }
}